<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/concrete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Морковь"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/concrete_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/concrete_title"
        android:textSize="12dp"
        android:text="1кг"/>
    <TextView
        android:id="@+id/concrete_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="11dp"
        android:background="@drawable/circle"
        android:backgroundTint="#31737272"
        android:text="Необязательно"
        android:textColor="@android:color/black"
        android:paddingVertical="3dp"/>
</RelativeLayout>