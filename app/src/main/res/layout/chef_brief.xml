<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chef_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        android:layout_marginEnd="8dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ava"
            android:scaleType="centerCrop"
            android:id="@+id/recipe_card_author_ava"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/recipe_card_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Маржан репецты"
            android:textSize="15dp"
            android:drawablePadding="2dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/recipe_card_author_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нур-Султан"
            android:textSize="11dp"/>
    </LinearLayout>
</LinearLayout>