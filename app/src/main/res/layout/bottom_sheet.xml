<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical"
    android:elevation="16dp"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <ToggleButton
                android:id="@+id/bottom_sheet_toggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/tb_up_down"
                android:text=""
                android:textOff=""
                android:textOn=""/>
            <TextView
                android:layout_toEndOf="@id/bottom_sheet_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Итоговая сумма"
                android:layout_toStartOf="@id/bottom_sheet_total"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            <TextView
                android:id="@+id/bottom_sheet_total"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33 000тг"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_ic_recycler" />
</LinearLayout>