<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Food">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarRecipe"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="175dp"
                app:layout_collapseMode="parallax"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="1.5dp"
                app:sliderIndicatorSelectedColor="@color/colorPrimary"
                app:sliderIndicatorUnselectedColor="#7234C759"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <Button
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_arrow_back_ios_24"
                    android:backgroundTint="#FFFFFF" />
                <androidx.cardview.widget.CardView
                    android:layout_toStartOf="@id/save_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">
                        <com.like.LikeButton
                            app:icon_type="heart"
                            app:icon_size="20dp"
                            android:id="@+id/star_button"
                            android:layout_width="wrap_content"
                            app:anim_scale_factor="1.5"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textSize="15dp"
                            android:textColor="@android:color/holo_red_dark"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="255"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toStartOf="@id/share_card"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:id="@+id/save_card">
                    <Button
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/black"
                        android:background="@drawable/ic_baseline_bookmark_24" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:id="@+id/share_card"
                    android:layout_alignParentEnd="true">
                    <Button
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/black"
                        android:background="@drawable/ic_baseline_share_24" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                app:layout_collapseMode="pin"
                android:orientation="vertical">
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:id="@+id/toolbar_content"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Медовый торт"
                        android:id="@+id/recipe_name"
                        android:textSize="22dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/recipe_hash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#десерты #cooking"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimary"/>
                    <LinearLayout
                        android:id="@+id/chef_layout"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="14dp"
                            android:layout_marginEnd="16dp"
                            app:cardPreventCornerOverlap="false">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/ava"
                                android:id="@+id/chef_ava_small"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/chef_full_name_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Маржан репецты"
                                android:textSize="15dp"
                                android:drawablePadding="2dp"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/chef_city_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Нур-Султан"
                                android:textSize="11dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/actions2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/button_order_meal"
                            android:layout_marginRight="5dp"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/oval"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/meal_price"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="2500тг"
                                android:gravity="center|bottom"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/to_order_meal"
                                android:gravity="center|top"
                                android:textSize="13dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/button_consultation"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/oval"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/consulting_price"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="1000тг"
                                android:gravity="center|bottom"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/consultation"
                                android:gravity="center|top"
                                android:textSize="13dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/ingredients"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <Button
                            android:id="@+id/button_add_portion"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/ic_baseline_remove_circle_24"
                            android:textSize="24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="16dp"
                            android:text="5 порций"/>
                        <Button
                            android:id="@+id/button_remove_portion"
                            android:gravity="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_baseline_add_circle_24"
                            android:layout_alignParentRight="true"
                            android:textSize="5dp"/>

                    </RelativeLayout>
                </LinearLayout>

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/ingredientSlider"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    app:layout_collapseMode="parallax"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="1.5dp"
                    app:sliderIndicatorSelectedColor="@color/colorPrimary"
                    app:sliderIndicatorUnselectedColor="#7234C759"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:text="@string/cooking"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    app:cardCornerRadius="15dp"
                    app:contentPadding="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/by_author"
                        android:textSize="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/recipe_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Яйцо с сахаром перемешиваем и добавляем масло сливочное, а не маргарин"
                    android:textColor="@android:color/black"/>
                <View
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#81000000"
                    android:layout_below="@id/concrete_detail"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/steps_recycler"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:text="@string/author"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="14dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ava"
                            android:id="@+id/chef_ava_large"/>
                    </androidx.cardview.widget.CardView>
                    <GridLayout
                        android:paddingLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:useDefaultMargins="true"
                        android:columnCount="2">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_columnSpan="2">
                            <TextView
                                android:id="@+id/chef_full_name_large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Маржан рецепты"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:drawableRight="@drawable/ic_verified"
                                android:drawablePadding="3dp"/>
                        </LinearLayout>
                        <TextView
                            android:text="5.0"
                            android:id="@+id/chef_rating"
                            android:textColor="@android:color/black"
                            android:drawableLeft="@drawable/ic_baseline_star_24"
                            android:drawablePadding="3dp"/>
                        <TextView
                            android:text="230"
                            android:id="@+id/chef_recipes_count"
                            android:textColor="@android:color/black"
                            android:drawableLeft="@drawable/ic_pan"
                            android:drawablePadding="3dp"/>
                        <TextView
                            android:text="146"
                            android:id="@+id/chef_orders_count"
                            android:textColor="@android:color/black"
                            android:drawableLeft="@drawable/ic_delivery"
                            android:drawablePadding="3dp"/>
                        <TextView
                            android:text="64"
                            android:id="@+id/chef_lessons_count"
                            android:textColor="@android:color/black"
                            android:drawableLeft="@drawable/ic_baseline_menu_book_24"
                            android:drawablePadding="3dp"/>
                    </GridLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="@string/by_author"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:id="@+id/comment_count"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments_recycler"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardElevation="16dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginEnd="8dp"
                    app:cardPreventCornerOverlap="false">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/magnum"
                        android:id="@+id/recipe_shop_image"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Magnum CashCarry"
                        android:textSize="15dp"
                        android:id="@+id/recipe_shop_name"
                        android:drawablePadding="2dp"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Открыто от 10:00 до 22:00"
                        android:id="@+id/recipe_shop_working"
                        android:textSize="11dp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <LinearLayout
                    android:id="@+id/button_order_products"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/to_order"
                        android:layout_gravity="center|bottom"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="@string/products_l"
                        android:gravity="center|top"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>