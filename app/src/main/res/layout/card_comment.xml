<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_height="44dp"
            android:layout_width="44dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="14dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/comment_author_card">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:id="@+id/comment_author_image"
                android:src="@drawable/ava"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/comment_author_rate"
            android:layout_toEndOf="@id/comment_author_card"
            android:text="Someone"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_author"
            android:layout_toStartOf="@+id/comment_author_rate"
            android:layout_toEndOf="@id/comment_author_card"
            android:text="Date"
            android:textSize="11dp" />
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/comment_author_rate"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/ratingBarStyleSmall"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/comment_content"
        android:text="@string/by_author"/>
</LinearLayout>