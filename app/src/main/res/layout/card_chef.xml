<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="14dp"
        android:id="@+id/chef_card">
        <ImageView
            android:id="@+id/chef_card_ava"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ava"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chef_card_full_name"
        android:text="Куна Анарбай"
        android:layout_toRightOf="@id/chef_card"
        android:layout_marginLeft="16dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chef_card_full_name"
        android:layout_toRightOf="@id/chef_card"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/chef_card_price"
        android:text="4500тг"
        android:textSize="15dp"/>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/chef_card_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textSize="13dp"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/star_small_icon"
        android:drawableTint="#ffcc00"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>